{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container">
<h1>Categories</h1><br><br>
<table class="table">
<tr>
<th>id</th>
<th>nom de la categorie</th>
<th>action</th>
</tr>
{% for category in categories %}
<tr>
<td>{{category.id}}</td>
<td>{{category.name}}</td>
<td><a  class="btn btn-outline-primary" href="{{path('app_category_update',{'id':category.id})}}">modifier</a>
<a click="return confirm('voulez-vous vraiment suprimer cette catégorie')" class="btn btn-danger" href="{{path('app_category_delete',{'id':category.id})}}" class"text-danger">Supprimer</a>
</td>
</tr>
{% else %}
<p>aucune categorie à afficher pour l'instant</p>   
{% endfor %}
</table>
<a class="btn btn-outline-primary" href="{{path('app_category_new')}}"> ajouter une categorie</a>
</div>

{% endblock %} 
