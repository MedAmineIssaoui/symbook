{% extends 'base.html.twig' %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
    <h1>Liste des livres</h1>
    <div class="row">
        {% for livre in livres %}
            <div class="col-md-4">
                <div class="card mb-4">
                    <img src="{{ livre.image }}" class="card-img-top" alt="{{ livre.titre }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ livre.titre | capitalize }}</h5>
                        <p class="card-text">
                            <strong>ISBN:</strong> {{ livre.isbn }}<br>
                            <strong>Editeur:</strong> {{ livre.editeur }}<br>
                            <strong>Date Edition:</strong> {{ livre.editedAt | date('d-m-Y') }}<br>
                            <strong>Prix(DT):</strong> {{ livre.prix }}<br>
                        </p>
                        <a href="{{ url('admin_livres_show', {'id': livre.id}) }}" class="btn btn-success btn-sm">Voir d√©tail...</a>
                        <a href="{{ url('app_admin_livres_delete', {'id': livre.id}) }}" class="btn btn-danger btn-sm">Supprimer</a>
                        <a href="#" class="btn btn-primary btn-sm">Editer</a>
                    </div>
                </div>
            </div>
            {% if loop.index % 3 == 0 %}
                </div><div class="row">
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
